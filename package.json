{
  "name": "sfcc-cartridge-overrides",
  "displayName": "SFCC Cartridge Overrides",
  "version": "1.0.0",
  "description": "VS Code Extension to Display SFCC Cartridge Overrides",
  "license": "MIT",
  "publisher": "RedVanWorkshop",
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#00435f",
    "theme": "dark"
  },
  "homepage": "https://github.com/redvanworkshop/sfcc-cartridge-overrides-vscode-extension#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/redvanworkshop/sfcc-cartridge-overrides-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/redvanworkshop/sfcc-cartridge-overrides-vscode-extension/issues"
  },
  "engines": {
    "vscode": "^1.46.0",
    "node": "^12.8.0"
  },
  "keywords": [
    "salesforce",
    "sfcc",
    "commerce-cloud",
    "demandware",
    "sandbox",
    "sfra",
    "vscode",
    "extension"
  ],
  "contributors": [
    {
      "name": "Peter Schmalfeldt",
      "email": "peter@redvanworkshop.com",
      "url": "https://redvanworkshop.com"
    }
  ],
  "activationEvents": [
    "onCommand:extension.sfccCartridges.checkOverrides",
    "onView:sfccGettingStartedView",
    "onView:sfccCartridgesView",
    "onView:sfccCartridgeOverridesView"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "id": "sfccCartridges",
      "title": "SFCC Cartridge Overrides",
      "properties": {
        "extension.sfccCartridges.path": {
          "order": 1,
          "type": "string",
          "default": "",
          "description": "SFCC Cartridge Path for Storefront. List of cartridges separated by colon.",
          "scope": "window",
          "pattern": "^$|^[a-zA-Z0-9_:-]+$",
          "patternErrorMessage": "Invalid Path Detected. Supports [a-zA-Z0-9_:-]"
        },
        "extension.sfccCartridges.overridesOnly": {
          "order": 2,
          "type": "boolean",
          "default": false,
          "description": "Only show Cartridges and Files with Overrides.",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sfcc-cartridges",
          "title": "SFCC Cartridge Overrides",
          "icon": "resources/activity-bar.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "sfccGettingStartedView",
        "contents": "Before we get started, we need to configure some Settings for this Extension to work.\n[Open Settings](command:extension.sfccCartridges.openSettings)\nNeed more information? [Get Help](https://github.com/redvanworkshop/sfcc-cartridge-overrides-vscode-extension#readme).",
        "when": "!config.extension.sfccCartridges.path"
      }
    ],
    "views": {
      "sfcc-cartridges": [
        {
          "id": "sfccGettingStartedView",
          "name": "Getting Started",
          "when": "!config.extension.sfccCartridges.path"
        },
        {
          "id": "sfccCartridgesView",
          "name": "Cartridge Path",
          "when": "config.extension.sfccCartridges.path"
        },
        {
          "id": "sfccCartridgeOverridesView",
          "name": "Overrides",
          "when": "config.extension.sfccCartridges.path"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "when": "explorerViewletVisible && resourceExtname =~ /[.](js|ds|isml|properties)$/ && resourcePath =~ /(controllers|models|scripts|templates)/ && resourcePath =~ /(cartridges|cartridge)/",
          "command": "extension.sfccCartridges.checkOverrides",
          "group": "navigation@1"
        }
      ],
      "view/title": [
        {
          "command": "extension.sfccCartridges.openSettings",
          "group": "navigation@10",
          "when": "view == sfccCartridgesView"
        },
        {
          "command": "extension.sfccCartridges.refreshCartridges",
          "group": "navigation@10",
          "when": "view == sfccCartridgesView"
        },
        {
          "command": "extension.sfccCartridges.enableFilter",
          "group": "navigation@10",
          "when": "view == sfccCartridgesView && !config.extension.sfccCartridges.overridesOnly"
        },
        {
          "command": "extension.sfccCartridges.disableFilter",
          "group": "navigation@10",
          "when": "view == sfccCartridgesView && config.extension.sfccCartridges.overridesOnly"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.sfccCartridges.generateDiff",
          "when": "view == sfccCartridgeOverridesView && listDoubleSelection"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.sfccCartridges.openSettings",
        "title": "Update Extension Settings",
        "category": "sfccCartridges",
        "icon": {
          "dark": "resources/dark/settings.svg",
          "light": "resources/light/settings.svg"
        }
      },
      {
        "command": "extension.sfccCartridges.refreshCartridges",
        "title": "Refresh Cartridges",
        "category": "sfccCartridges",
        "icon": {
          "dark": "resources/dark/refresh.svg",
          "light": "resources/light/refresh.svg"
        }
      },
      {
        "command": "extension.sfccCartridges.cartridgeListUpdated",
        "title": "Cartridge List Updated",
        "category": "sfccCartridges"
      },
      {
        "command": "extension.sfccCartridges.cartridgeMissing",
        "title": "Cartridge Missing",
        "category": "sfccCartridges"
      },
      {
        "command": "extension.sfccCartridges.viewOverrides",
        "title": "View Overrides",
        "category": "sfccCartridges"
      },
      {
        "command": "extension.sfccCartridges.enableFilter",
        "title": "Show Overrides Only",
        "category": "sfccCartridges",
        "icon": {
          "dark": "resources/dark/filter.svg",
          "light": "resources/light/filter.svg"
        }
      },
      {
        "command": "extension.sfccCartridges.disableFilter",
        "title": "Show All Cartridge Files",
        "category": "sfccCartridges",
        "icon": {
          "dark": "resources/dark/filter-enabled.svg",
          "light": "resources/light/filter-enabled.svg"
        }
      },
      {
        "command": "extension.sfccCartridges.generateDiff",
        "title": "Create DIFF: Before â†” After",
        "group": "sfccCartridges@1"
      },
      {
        "command": "extension.sfccCartridges.checkOverrides",
        "title": "Check for Cartridge Overrides",
        "category": "sfccCartridges",
        "icon": {
          "dark": "resources/dark/cartridge.svg",
          "light": "resources/light/cartridge.svg"
        }
      }
    ]
  },
  "scripts": {},
  "devDependencies": {},
  "dependencies": {}
}
